@using Microsoft.AspNetCore.Identity
@using kiosko.Models

@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

<nav class="main-header navbar navbar-expand navbar-white navbar-light navegacion">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      @if (signInManager.IsSignedIn(User))
                    {
                         <li class="nav-item">
                             Hello @userManager.GetUserName(User)
                        </li>
                    }
   </ul>     


   <section class="header">

            <div class="header-hija">

                <div class="contenedor">
                    <input type="text" placeholder="Buscar">
                    <div class="boton-busqueda">
                        <i class="fa fa-search"></i>
                    </div>
                </div>


                <div class="menu-desplegable">
                    <button class="boton-perfil">
                        <img class="perfil" src="/img/perfil.png" alt="perfil">
                    </button>

                    <a class="cerrar-sesion" asp-controller="Account" asp-action="Logout">
                        <li class="lista-item">Cerrar Sesion</li>
                    </a>
            
                    <a class="editar-modulos" href="/Modulos/Index">
                        <li>Editar Modulos</li>
                    </a>
                    
                </div>
            </div>
        </section>

  </nav>
  <!-- /.navbar -->