  <script type="text/javascript">

    var isShowing = "block";
    function showOption() {
      console.log('entro');
        $("#menu-perfil").css("display", isShowing);
        if(isShowing == "block"){
          isShowing = "none";
        }else{
      	  isShowing = "block";
          }
    }

    var show = "none";
    var icon = "block";
    function iconRotate(){
        $("#iconbutton").toggleClass("button-arrow-right");
        $("#logoKiosko").css("display", show);
        $("#iconoKiosko").css("display", icon);
        if(show == "none"){
            show ="block";
        }else{
            show = "none";
        }
        if(icon == "block"){
            icon = "none";
        }
        else{
            icon = "block";
        }

        }
    
</script>